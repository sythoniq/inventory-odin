<!DOCTYPE html>
<html lang="en">
  <head>
    <title> <%= title %> </title>
    <link href="/category.css" rel="stylesheet" />
  </head>
  <body>
    <h2><%= title %></h2>
    <% if (locals.items) {%>
    <main class="items-content">
      <div class="container">
        <% items.forEach((item) => { %>
        <div class="item-card">
          <h2><%= item.itemname %></h2>
          <p>Quantity: <%= item.itemquantity %></p>

          <div class="item-card-options">
            <a href="/items/edit/<%= item.itemid %>">
              <button>Edit</button>
            </a>
            <a href="/items/delete/<%= item.itemid %>">
              <button>Delete</button>
            </a>
          </div>
        </div>
        <%})%>
      </div>
      <%}%>
      <div class="links">
        <a href="/items/new">
          <button>Add Item</button>
        </a>

        <a href="/categories">
          <button>Back</button>
        </a>
      </div>
    </main>
  </body>
</html>
