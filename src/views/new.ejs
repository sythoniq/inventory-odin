<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%=title%></title>
  </head>
  <body>
    <%- include("partials/errors.ejs") %>
    <% if (locals.type == "category") { %>
    <form action="/<%= type %>/new" method="post">
      <label for="category-name"></label>
      <input type="text" id="category-name" name="categoryName"
        placeholder="Category" />
      <button class="submit-btn">Add Category</button>
    </form>
    <% } %>
    <% if (locals.type == "item") { %> 
    <form action="/<%= type %>/new/<%= category %>" method="post">
      <label for="item-name"></label>
      <input type="text" id="item-name" name="itemName" placeholder="Item" />
      <label for="item-quantity"></label>
      <input type="number" id="item-quantity" name="itemQuantity" placeholder="10"
        />
      <button class="submit-btn">Add Item</button>
    </form>
    <% } %>
  </body>
</html>
